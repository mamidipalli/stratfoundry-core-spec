"signals":{"type":"array","items":{"type":"object","required":["id","expr"],"properties":{"id":{"type":"string"},"expr":{"type":"string"}}}}
}
},
"orders":{"type":"object"},
"risk":{"type":"object"},
"runtime":{"type":"object","properties":{"warmup_bars":{"type":"integer"},"session":{"type":"object"}}}
}
}
